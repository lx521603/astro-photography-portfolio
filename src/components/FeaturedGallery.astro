---
import PhotoGrid from './PhotoGrid.astro';
import { featuredCollectionId, getImages } from '../data/imageStore';

const images = await getImages({ collection: featuredCollectionId });
---

<div class="max-w-2xl mx-auto text-center mb-12">
	<h2 class="text-3xl md:text-4xl font-bold mb-4">精选照片</h2>
	<p class="text-gray-600">从我的各种经历中挑选出来的最好的照片</p>
</div>

<!-- 添加容器约束 -->
<div class="container-custom">  <!-- 使用你现有的容器类 -->
	<div class="p-4">
		<PhotoGrid images={images} />
	</div>
</div>